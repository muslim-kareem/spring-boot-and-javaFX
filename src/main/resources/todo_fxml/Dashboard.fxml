<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="scenePane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: wight;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.fronted.frontendjavafxspringboot.todo.Controller">
   <children>
      <ListView fx:id="todoListView" layoutX="-2.0" layoutY="120.0" prefHeight="219.0" prefWidth="616.0" />
      <Label alignment="CENTER" layoutX="14.0" layoutY="14.0" prefHeight="55.0" prefWidth="602.0" text="My Todo app">
         <font>
            <Font size="35.0" />
         </font>
      </Label>
      <Label fx:id="doneLabel" contentDisplay="CENTER" layoutX="440.0" layoutY="78.0" onMouseClicked="#setDone" prefHeight="33.0" prefWidth="62.0" text="DONE">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="inProgressLabel" contentDisplay="CENTER" layoutX="248.0" layoutY="81.0" onMouseClicked="#setInProgress" prefHeight="26.0" prefWidth="135.0" text="IN_PROGRESS">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Label fx:id="openLabel" contentDisplay="CENTER" layoutX="160.0" layoutY="80.0" onMouseClicked="#setOpens" prefHeight="26.0" prefWidth="69.0" text="OPEN">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
      <Button fx:id="deleteTodoButton" focusTraversable="false" layoutX="535.0" layoutY="360.0" mnemonicParsing="false" onAction="#deleteTodoById" prefHeight="0.0" prefWidth="55.0" style="-fx-background-color: red;" text="Delete" textFill="WHITE" />
      <TextField fx:id="inputField" layoutX="14.0" layoutY="360.0" prefHeight="26.0" prefWidth="301.0" />
      <Button fx:id="saveButton" focusTraversable="false" layoutX="328.0" layoutY="360.0" mnemonicParsing="false" onAction="#saveTodo" prefHeight="26.0" prefWidth="62.0" style="-fx-background-color: blue;" text="Save" textFill="WHITE" />
   </children>
</AnchorPane>
